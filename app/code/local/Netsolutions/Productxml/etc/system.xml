<?xml version="1.0"?>
<config>
	  <sections>
		<nsi_productxml  translate="label" module="productxml">                    
		<label>Product Xml</label>
		<tab>catalog</tab>
		<frontend_type>text</frontend_type>
		<sort_order>1</sort_order>
		<show_in_default>1</show_in_default>
		<show_in_website>1</show_in_website>
		<show_in_store>1</show_in_store>            
					<groups>
				      <nsi_productxml translate="label"> 
					  <label>Manage Product XML</label>
					  <frontend_type>text</frontend_type>
					  <sort_order>0</sort_order>
					  <show_in_default>1</show_in_default>
					  <show_in_website>1</show_in_website>
					  <show_in_store>1</show_in_store>
				       <fields>
                          <nsi_productxml_enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>

                          </nsi_productxml_enable>
							<run translate="label">
							<label>Generate Xml Data</label>
							<frontend_type>button</frontend_type>
							<frontend_model>productxml/button</frontend_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Click Run Now and a file will save under root folder which will contain product data in XML format. For now, you can only generate data for configurable products.</comment>
							</run>
					   </fields>
					   </nsi_productxml>
					</groups>
		</nsi_productxml>
	  </sections>
</config>
